<% provide(:title, 'Create a List') %>
<h1>Create a Trello List</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@list) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :order %>
      <%= f.text_field :order, class: 'form-control' %>

      <%= f.submit "Create My List", class: "btn btn-primary col-sm-4 col-sm-offset-4" %>
    <% end %>
  </div>
</div>
