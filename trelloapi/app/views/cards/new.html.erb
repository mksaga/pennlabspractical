<% provide(:title, 'Create a Card') %>
<h1>Create a Trello Card</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@card) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.submit "Create My Card", class: "btn btn-primary col-sm-4 col-sm-offset-4" %>
    <% end %>
  </div>
</div>
