<% provide(:title, 'Create a Card') %>
<h1>Create a Trello Card</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@card) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create This Card", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
